{
	"name": "solid-x-form",
	"version": "0.2.0",
	"description": "Recursive form state management library",
	"license": "MIT",
	"author": "danielrkling",
	"contributors": [],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/danielrkling/solid-x-form.git"
	},
	"homepage": "https://github.com/danielrkling/solid-x-form#readme",
	"bugs": {
		"url": "https://github.com/danielrkling/solid-x-form/issues"
	},
	"files": [
		"dist"
	],
	"private": false,
	"sideEffects": false,
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"browser": {},
	"exports": {
		"development": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/dev.js"
			}
		},
		"import": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"typesVersions": {},
	"scripts": {
		"dev": "vite serve dev",
		"build": "tsup",
		"test": "concurrently pnpm:test:*",
		"test:client": "vitest",
		"test:ssr": "pnpm run test:client --mode ssr",
		"prepublishOnly": "pnpm build",
		"format": "prettier --ignore-path .gitignore -w \"src/**/*.{js,ts,json,css,tsx,jsx}\" \"dev/**/*.{js,ts,json,css,tsx,jsx}\"",
		"lint": "concurrently pnpm:lint:*",
		"lint:code": "eslint --ignore-path .gitignore --max-warnings 0 src/**/*.{js,ts,tsx,jsx}",
		"lint:types": "tsc --noEmit",
		"update-deps": "pnpm up -Li"
	},
	"peerDependencies": {
		"solid-js": "^1.6.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@types/node": "^20.12.12",
		"concurrently": "^8.2.2",
		"esbuild": "^0.21.3",
		"esbuild-plugin-solid": "^0.6.0",
		"jsdom": "^24.0.0",
		"solid-js": "^1.8.17",
		"tsup": "^8.0.2",
		"tsup-preset-solid": "^2.2.0",
		"typescript": "^5.4.5",
		"vite": "^5.2.11",
		"vite-plugin-solid": "^2.10.2",
		"vitest": "^1.6.0"
	},
	"keywords": [
		"solid"
	]
}
